#version 330 core

// Interpolated values from the vertex shaders
in vec3 texcoord;
in vec3 normal;
in vec3 firstBoneWeights;

// Ouput data
out vec3 color;

void main(){

	vec3 ambient = vec3(0.2,0.2,0.4);
	vec3 col = vec3(1,1,1) * clamp(dot(normalize(vec3(0,0,1)), normal), 0.0, 1.0);
	// Output color = color specified in the vertex shader, 
	// interpolated between all 3 surrounding vertices
	//color = (normal + 1) * 0.5f;
	color = ambient + col;
}